<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.zhang.diary.dao.PlatformUserDAO">
    <resultMap id="BaseResultMap" type="cn.zhang.diary.model.PlatformUser">
        <id column="id" property="id"/>
        <result column="user_show_name" property="userShowName"/>
        <result column="login_name" property="loginName"/>
        <result column="password" property="password"/>
        <result column="user_status" property="userStatus"/>
        <result column="user_type" property="userType"/>
        <result column="login_time" property="loginTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <sql id="Base_Column_List">
		id, user_show_name, login_name, password, user_status, user_type, login_time, create_time,
		update_time, remark
	</sql>

    <select id="queryById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from platform_user
        where id = #{id}
    </select>

    <select id="queryByLoginName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from platform_user
        where login_name = #{loginName}
    </select>

    <update id="updateUser" parameterType="cn.zhang.diary.model.PlatformUser">
        update platform_user
        <set>
            <trim suffixOverrides=",">
                <if test="userShowName != null">
                    user_show_name = #{userShowName},
                </if>
                <if test="password != null">
                    password = #{password},
                </if>
                <if test="userStatus != null">
                    user_status = #{userStatus},
                </if>
                <if test="userType != null">
                    user_type = #{userType},
                </if>
                <if test="loginTime != null">
                    login_time = #{loginTime},
                </if>
                <if test="updateTime != null">
                    update_time = #{updateTime},
                </if>
                <if test="remark != null">
                    remark = #{remark},
                </if>
            </trim>
        </set>
        <where>
            <if test="id != null and id != 0">
                and id = #{id}
            </if>
            <if test="loginName != null">
                and login_name = #{loginName}
            </if>
        </where>
    </update>

</mapper>